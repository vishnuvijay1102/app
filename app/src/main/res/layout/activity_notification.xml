<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Notification">

    <Button
        android:id="@+id/bbtn1"
        android:layout_width="67dp"
        android:layout_height="61dp"
        android:textSize="30dp"
        android:textColor="#203EFF"
        android:background="@drawable/back_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.018" />

    <TextView
        android:layout_width="28dp"
        android:layout_height="38dp"
        android:text="@string/back2"
        android:textColor="#0008FF"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/bbtn1"
        app:layout_constraintEnd_toEndOf="@+id/bbtn1"
        app:layout_constraintHorizontal_bias="0.67"
        app:layout_constraintStart_toStartOf="@+id/bbtn1"
        app:layout_constraintTop_toTopOf="@+id/bbtn1"
        app:layout_constraintVertical_bias="0.37" />
</androidx.constraintlayout.widget.ConstraintLayout>